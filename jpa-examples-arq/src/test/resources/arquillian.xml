<arquillian xmlns="http://jboss.org/schema/arquillian"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://jboss.org/schema/arquillian
        http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

	<defaultProtocol type="Servlet 3.0" />
        
    <!-- Uncomment the below lines to export the deployment --> 
    <!--
    <engine>
    	<property name="deploymentExportPath">target/deployment</property>
    </engine>
    -->

	<!-- JBoss AS 7 (Managed) -->
    <container qualifier="jboss-as7">
        <configuration>
            <property name="jbossHome">D:\Apps\jboss-as-7.1.0.Final</property>
        </configuration>
    </container>
    
    <!-- GlassFish 3.1 (Managed) -->
   	<container qualifier="glassfish-31">
        <configuration>
            <property name="glassFishHome">G:\Apps\glassfish3</property>
        </configuration>
    </container>
    
    <!-- WebLogic 12c (Remote) -->
   	<container qualifier="wls-12c">
        <configuration>
            <property name="adminUrl">t3://localhost:7001</property>
            <property name="adminUserName">weblogic</property>
            <property name="adminPassword">welcome1</property>
            <property name="wlsHome">G:\Oracle12c\Middleware\wlserver_12.1</property>
            <property name="target">AdminServer</property>
        </configuration>
    </container>
</arquillian>